
@using System.Web.Mvc.Html
@model Orchard.RolexWebShop.Models.ProductPart
<fieldset>
    <legend>Product Fields</legend>

    <div class="editor-label">@Html.LabelFor(x => x.Sku)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Sku)
        @Html.ValidationMessageFor(x => x.Sku)
    </div>
    <div class="hint">Enter the Stock Keeping Unit</div>

    <div class="editor-label">@Html.LabelFor(x => x.UnitPrice)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.UnitPrice)
        @Html.ValidationMessageFor(x => x.UnitPrice)
    </div>
    <div class="hint">Enter the sales price per unit</div>

    <div class="editor-label">@Html.LabelFor(x => x.Description)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Description)
        @Html.ValidationMessageFor(x => x.Description)
    </div>
    <div class="hint">Enter product description</div>

    <div class="editor-label">@Html.LabelFor(x => x.ShortDescription)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.ShortDescription)
        @Html.ValidationMessageFor(x => x.ShortDescription)
    </div>
    <div class="hint">Enter product short description</div>

</fieldset>